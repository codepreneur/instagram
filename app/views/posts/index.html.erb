<% if @posts.any? %>
	<% @posts.each do |post| %>
	<% if post.image.present? %>
		<%= image_tag post.image.url, class: 'uploaded-pic' %>
	<% end %>
	<h2><%= post.title %></h2> <br />
	<p><%= post.description %></p>
	<% end %>

<% else %>
	<h1>No posts yet</h1>	
<% end %>

<%= link_to "New post", new_post_path %>


